\makeatletter
\newcommand*\Lips {}
\let\Lips\relax
\DeclareRobustCommand\Lips {%
  \ifvmode \def\sc@t@a {%
      \leavevmode
      .\nobreak\ .\nobreak\ .\nobreak\ %
    }%
  \else
    \let\sc@t@a\lp@lips@hmode
  \fi
